<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ENAP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ENAP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="oceanography" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Oceanografía
                            </a>
                            <div class="dropdown-menu" aria-labelledby="oceanography">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Antecedentes">Antecedentes</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Fisica">Física</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Quimica">Química</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item disabled" href="#">Biológica</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown" >
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="restoration" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Restauración
                            </a>
                            <div class="dropdown-menu" aria-labelledby="restoration">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Especie">Selección de especie</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Sitios">Sitios y sustratos</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Repoblamiento">Repoblamiento Macroalgas</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Arrecifes">Arrecifes artificiales</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Siembra">Unidades de siembra</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="education" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Educación
                            </a>
                            <div class="dropdown-menu" aria-labelledby="education">
                                <a class="dropdown-item disabled" href="#">En construcción</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - ENAP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
